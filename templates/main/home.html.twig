{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <img src="/image/home.jpg" alt="montagne et snowboard" id="imgHome">
    <h1 id="homeSentence">La communauté vous apprend le freestyle</h1>
    <hr>
    <div class="container">
        <h1> Les derniers tricks !!!</h1>
        <section class="tricks">
            <div class="row">
                {% for trick in tricks %}
                    <div class="col-3">
                        <article class="card">

                            <a href="{{ path('trick_show',{
                                'group_slug':trick.groupName.slug,
                                'id':trick.id,
                                'trick_slug':trick.slug
                            }) }}">
                                <img src="http://placehold.it/150x150" alt="" class="card-img-top">
                                {% if app.user %}
                                    <div id="button-card-home" class="btn btn-secondary disabled">
                                        <a href="{{ path('trick_edit',{
                                            'group_slug':trick.groupName.slug,
                                            'id':trick.id,
                                            'trick_slug':trick.slug
                                        }) }}" class="col-3">
                                            <span class="oi oi-pencil"></span>
                                        </a>
                                        <a href="{{ path('deleteConf_trick',{
                                            'group_slug':trick.groupName.slug,
                                            'id':trick.id,
                                            'trick_slug':trick.slug
                                        }) }}" class="col-3">
                                            <span class="oi oi-delete"></span>
                                        </a>
                                    </div>
                                {% endif %}
                                </img>

                                <h2 class="card-title">{{ trick.name }}</h2>
                                <div id="cardGroup" class="card-title">{{ trick.groupName.title }}</div>
                                <div class="content card-text">
                                    {{ trick.description | raw }}
                                </div>
                                <div class="metadata card-footer">
                                    {% if trick.updatedAt %}
                                        Modifié le {{ trick.updatedAt | date('d/m/Y') }}
                                    {% else %}
                                        {{ trick.createdAt | date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            </a>
                        </article>
                    </div>
                {% endfor %}
                <div class="offset-4 col-4">
                    <a class="btn btn-secondary" href="/page={{ line }}">Afficher plus de
                        tricks</a>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
