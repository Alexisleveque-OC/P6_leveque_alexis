{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <h1>Inscription</h1>
        <div class="offset-1 col-10">
            {{ form_start(formUser) }}

            {{ form_row(formUser.username, {'label':"Nom d'utilisateur",'attr':{'placeholder':"Nom d'utilisateur"}}) }}
            {{ form_row(formUser.email, {'label':"Email d'utilisateur",'attr':{'placeholder':"Email d'utilisateur"}}) }}
            {{ form_row(formUser.password, {'label':"Mot de passe",'attr':{'placeholder':"Mot de passe"}}) }}

            <button class="btn btn-success">S'inscrire</button>
            {{ form_end(formUser) }}
        </div>

    </div>
{% endblock %}
