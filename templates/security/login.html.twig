{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="offset-2 col-8">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}
        {% if app.user == null %}
        <div class="container">
            <a class="offset-2 col-8 text-center oi oi-account-login icon-form"></a>

            <div class="offset-2 col-8">
                <h1 class="h3 mb-3 font-weight-normal">Connection</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <hr>
                <button class="btn btn-lg btn-success offset-2 col-8 text-center" type="submit">
                    Connexion
                </button>
                <hr>
                <a class="btn btn-lg btn-outline-warning offset-4 col-4 text-center" href="{{ path('forgot_pass') }}">oups, j'ai oublié mon mot de passe !</a>
            </div>
        </div>
        {% endif %}
    </form>
{% endblock %}
